# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# JWT Secret
JWT_SECRET=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/orai_oracle

# Redis
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
WALLET_PRIVATE_KEY=your_wallet_private_key_here
OG_RPC_URL=https://evmrpc-testnet.0g.ai
OG_CHAIN_ID=16600

# 0G Services Configuration
USE_REAL_0G=false
# Set to 'true' when you have:
# 1. Added WALLET_PRIVATE_KEY above
# 2. Funded your wallet with testnet tokens from https://faucet.0g.ai
# 3. Funded prepaid account for compute (if using compute services)

# Relayer Configuration
AUTO_START_RELAYER=false
# Set to 'true' to automatically start the relayer service on backend startup
# Requires WALLET_PRIVATE_KEY to be configured

# CORS
# CORS_ORIGIN=https://yourdomain.com

# Network
OG_NETWORK=testnet
