    "@fastify/rate-limit": "^10.3.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^6.19.0",
    "bullmq": "^5.64.1",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "fastify": "^5.6.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "prisma": "^6.19.0",
    "redis": "^5.10.0",
    "zod": "^4.1.12"
